<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_eff1f4"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.netease.yunxin.kit.common.ui.widgets.BackTitleBar
        android:id="@+id/q_chat_role_permission_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55_dp" />

    <!-- general permission -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:text="@string/qchat_role_permission_general_title"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

    <com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout
        android:id="@+id/q_chat_role_permission_general_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_96_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_8_dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"
                android:text="@string/qchat_role_permission_channel_attr"/>

            <com.netease.yunxin.kit.qchatkit.ui.common.widget.ThreeStatusSwitch
                android:id="@+id/q_chat_role_permission_attr_switch"
                android:layout_width="96dp"
                android:layout_height="@dimen/dimen_26_dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dimen_16_dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48_dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"
                android:text="@string/qchat_role_permission_channel_permission"/>

            <com.netease.yunxin.kit.qchatkit.ui.common.widget.ThreeStatusSwitch
                android:id="@+id/q_chat_role_permission_channel_switch"
                android:layout_width="96dp"
                android:layout_height="@dimen/dimen_26_dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dimen_16_dp" />
        </FrameLayout>
    </com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout>

    <!-- message permission -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:text="@string/qchat_role_permission_message_permission"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

    <com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_radius="@dimen/dimen_8_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_8_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/q_chat_role_permission_send_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_16_dp"
                    android:text="@string/qchat_channel_permission_send_message"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />

                <com.netease.yunxin.kit.qchatkit.ui.common.widget.ThreeStatusSwitch
                    android:id="@+id/q_chat_role_permission_send_message_switch"
                    android:layout_width="96dp"
                    android:layout_height="@dimen/dimen_26_dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dimen_16_dp" />
            </FrameLayout>

        </LinearLayout>
    </com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout>

    <!-- member permission -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32_dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:text="@string/qchat_role_permission_role_member_title"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

    <com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout
        android:id="@+id/q_chat_role_permission_member_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48_dp"
        app:corner_radius="@dimen/dimen_8_dp"
        android:background="@color/color_white"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_8_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16"
                android:text="@string/qchat_role_permission_manager_member"/>

            <com.netease.yunxin.kit.qchatkit.ui.common.widget.ThreeStatusSwitch
                android:id="@+id/q_chat_role_permission_manager_member_switch"
                android:layout_width="96dp"
                android:layout_height="@dimen/dimen_26_dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/dimen_16_dp" />
    </com.netease.yunxin.kit.common.ui.widgets.RoundFrameLayout>
</LinearLayout>