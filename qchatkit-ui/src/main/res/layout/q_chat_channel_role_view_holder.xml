<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_38_dp">

    <com.netease.yunxin.kit.common.ui.widgets.RoundTextView
        android:id="@+id/q_chat_vh_role_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_20_dp"
        android:layout_marginEnd="@dimen/dimen_20_dp"
        android:paddingEnd="@dimen/dimen_30_dp"
        android:paddingStart="@dimen/dimen_16_dp"
        android:background="@color/color_white"
        android:textColor="@color/color_333333"
        android:maxLines="1"
        android:textSize="@dimen/text_size_16"
        android:ellipsize="end"
        android:gravity="center_vertical"/>

    <ImageView android:id="@+id/q_chat_vh_role_edit_iv"
        android:layout_width="@dimen/dimen_32_dp"
        android:layout_height="@dimen/dimen_32_dp"
        android:src="@drawable/ic_arrow_right"
        android:scaleType="center"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="@dimen/dimen_20_dp"/>

</FrameLayout>